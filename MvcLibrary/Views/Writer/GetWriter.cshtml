
@model MvcLibrary.Models.Entity.tblWriters

@{
    ViewBag.Title = "GetWriter";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="text-align:center;">Yazar Güncelleme Sayfası</h2>

@using (Html.BeginForm("UpdateWriter", "Writer", FormMethod.Post))
{
    <div style="margin-top:15px;" class="form-group">
        <label>Yazar ID</label>
        @Html.TextBoxFor(x => x.WriterId, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;" class="form-group">
        <label>Yazar Ad</label>
        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;" class="form-group">
        <label>Yazar Soyad</label>
        @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;" class="form-group">
        <label>Detay</label>
        @Html.TextAreaFor(x => x.WriterDetail, new { @class = "form-control" })
    </div>

    <button class="btn btn-warning">Güncelle</button>
}