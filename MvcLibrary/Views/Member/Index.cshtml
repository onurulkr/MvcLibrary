@using MvcLibrary.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<tblMembers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üyeler</h2>

<table class="table table-bordered">
    <tr>
        <th>Üye Id</th>
        <th>Üye Adı</th>
        <th>Üye Soyadı</th>
        <th>Mail</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Fotoğraf</th>
        <th>Telefon</th>
        <th>Okul</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MemberId</td>
            <td>@item.MemberName</td>
            <td>@item.MemberSurname</td>
            <td>@item.MemberMail</td>
            <td>@item.MemberUsername</td>
            <td>@item.MemberPassword</td>
            <td>@item.MemberImage</td>
            <td>@item.MemberPhone</td>
            <td>@item.MemberSchool</td>
            <td><a href="/Member/DeleteMember/@item.MemberId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Member/GetMember/@item.MemberId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<a href="/Member/AddMember/" class="btn btn-primary">Yeni Üye Ekle</a>

