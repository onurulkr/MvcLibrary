@model MvcLibrary.Models.Entity.tblCategories
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @*@Html.LabelFor(x => x.CategoryId)*@
        <label>Kategori Id</label>
        @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
        <br />
        @*@Html.LabelFor(x => x.CategoryName)*@
        <label>Kategori Adı</label>
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
